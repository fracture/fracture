{

    "main": {
        "notation": ":resource[/:id][/:action]",
        "defaults": {
            "resource"  :   "site",
            "action"    :   "default"
        },
        "conditions": {
            "id"        :   "[0-9]+"
        }
    },

    "fallback": {
        "notation": "[:any]",
        "conditions": {
            "any"      : ".*"
        },
        "defaults": {
            "resource"  :   "site",
            "action"    :   "default"
        }
    }

}